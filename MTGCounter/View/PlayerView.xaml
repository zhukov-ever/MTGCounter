<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MTGCounter.View.PlayerView">

    <ContentView.Content>

        <StackLayout Orientation="Vertical">
            <Label Text="Player" HorizontalOptions="Center" HeightRequest="50" BackgroundColor="Aqua"/>
            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Button Text="-1"/>
                <Button Text="-5"/>
                <Label Text="30"/>
                <Button Text="+5"/>
                <Button Text="+1"/>
            </StackLayout>
            
        </StackLayout>
        
	</ContentView.Content>
    
</ContentView>
